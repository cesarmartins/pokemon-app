{% extends 'base.html.twig' %}

{% block title %}Lista de Cartas de Pokémon{{ parent() }}{% endblock %}

{% block body %}
    <div class="fundo-header">
        <h1>Lista de Cartas de Pokémon</h1>
        <p><a class="btn" href="/compare">Compare Cartas</a></p>
    </div>
    <ul class="card-list">
        {% for eachcards in cards %}
            {% for card in eachcards %}
                <li class="card">
                    <img src="{{ card.imageUrl }}" alt="{{ card.name }}">
                    <hr />
                    <div class="altura-fix">
                        <p><strong>Nome:</strong> {{ card.name }}</p>
                        <p><strong>ID:</strong> {{ card.id }}</p>
                        {% if card.hp is defined %}
                            <p><strong>HP:</strong> {{ card.hp }}</p>
                        {% endif %}
                        {% if card.types is defined %}
                            <p><strong>Tipo(s):</strong> {{ card.types[0] | join(', ') }}</p>
                        {% endif %}
                    </div>
                    <hr />
                    <p><a class="btn" href="{{ path('pokemon_detail', { 'id': card.id }) }}">Ver Detalhes</a></p>
                </li>
            {% endfor %}
        {% endfor %}
    </ul>
{% endblock %}



